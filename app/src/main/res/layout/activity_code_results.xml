<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="match_parent">

        <LinearLayout android:layout_width="@dimen/dp_100" android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/dp_30"
                      android:layout_marginTop="@dimen/dp_30"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                      android:textSize="@dimen/sp_16"
                      android:textColor="@color/black"
                      android:text="@string/code_number"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="@string/code_time"/>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/black"
                      android:text="@string/results_season"/>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/black"
                      android:text="@string/brand"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="@string/query_title"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="@string/query_name"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="@string/results_color"/>

            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="@string/results_size"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:text="@string/transshipment_detail_price"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/dp_30"
                      android:layout_marginTop="@dimen/dp_30"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/code_number"
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_time"/>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/black"
                      android:id="@+id/code_season"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_brand"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_styleNo"/>

            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_styleName"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_color"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_size"/>
            <TextView
                    android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"
                    android:id="@+id/code_price"/>
        </LinearLayout>
    </LinearLayout>
</layout>