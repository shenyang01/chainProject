<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText android:layout_width="match_parent" android:layout_height="@dimen/dp_200"
                      android:id="@+id/help_proposal"
                      android:textSize="@dimen/sp_14"
                      android:background="@drawable/help_rectangle"
                      android:hint="@string/help_proposal"
                      android:padding="@dimen/dp_5"
                      android:maxLines="10"
                      android:gravity="left"
                      android:layout_margin="@dimen/dp_20"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@drawable/help_rectangle"
                          android:layout_margin="@dimen/dp_20"
                          android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_30"
                          android:textSize="@dimen/sp_16"
                          android:textColor="@color/black"
                          android:padding="@dimen/dp_5"
                          android:text="@string/help_image"/>
                <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/help_rv"/>

            </LinearLayout>
            <Button android:layout_width="match_parent" android:layout_height="@dimen/dp_50"
                    android:id="@+id/help_submission"
                    android:textSize="@dimen/sp_18"
                    android:layout_margin="@dimen/dp_50"
                    android:textColor="@color/white"
                    android:text="@string/submission"
                    android:background="@drawable/login_button"/>
        </LinearLayout>
    </ScrollView>
</layout>