<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black2">

        <android.support.v4.view.ViewPager
                android:id="@+id/details_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:id="@+id/home_spot"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/details_viewPager"
                android:layout_width="match_parent" android:layout_height="@dimen/dp_15" android:layout_marginTop="@dimen/dp_m_80"/>

    </RelativeLayout>
</layout>