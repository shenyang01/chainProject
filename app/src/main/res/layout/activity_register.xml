<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/register_login"
                  android:textColor="@color/blue"
                  android:textSize="@dimen/sp_16"
                  android:padding="@dimen/dp_10"
                  android:layout_alignParentEnd="true"
                  android:background="?android:attr/selectableItemBackground"
                  android:gravity="center"
                  android:text="@string/login_button"
                  android:layout_marginTop="@dimen/dp_10"/>
        <ImageView android:layout_width="@dimen/dp_100" android:layout_height="@dimen/dp_100"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/dp_10"
                   android:contentDescription="@string/app_name"
                   android:id="@+id/register_image"
                   android:src="@mipmap/login"
                   android:layout_below="@+id/register_login"/>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_50"
                android:layout_below="@+id/register_image">
            <android.support.design.widget.TextInputEditText
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:hint="@string/register_phone"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/register_code"
                android:layout_height="@dimen/dp_60"
                android:layout_width="match_parent"
                android:layout_below="@+id/register_phone"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_50">
            <android.support.design.widget.TextInputEditText
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:hint="@string/register_code"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/register_pws"
                android:layout_height="@dimen/dp_60"
                android:layout_width="match_parent"
                android:layout_below="@+id/register_code"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_50">
            <android.support.design.widget.TextInputEditText
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:hint="@string/register_pws"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:id="@+id/register_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:text="@string/code"
                android:background="?android:attr/selectableItemBackground"
                android:layout_alignEnd="@+id/register_code"
                android:layout_alignBottom="@+id/register_code"
                android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
                android:id="@+id/register_bt"
                android:layout_width="match_parent" android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_below="@id/register_pws"
                android:background="@drawable/background_select_bt"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/register"/>
    </RelativeLayout>
</layout>