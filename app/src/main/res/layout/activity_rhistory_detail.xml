<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content" android:layout_height="@dimen/dp_40"
                      android:gravity="center"
                      android:layout_marginStart="@dimen/dp_10"
                      android:id="@+id/rhistoryDetail_posid"/>
            <TextView android:layout_width="wrap_content" android:layout_height="@dimen/dp_40"
                      android:paddingStart="@dimen/dp_10"
                      android:gravity="center"
                      android:paddingEnd="@dimen/dp_10"
                      android:layout_alignEnd="@+id/rhistoryDetail_posid"
                      android:background="?android:attr/selectableItemBackground"
                      android:layout_alignParentEnd="true"
                      android:textColor="@color/colorAccent"
                      android:text="@string/retreat"
                      android:id="@+id/rhistoryDetail_retreat"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_30"
                          android:layout_below="@+id/rhistoryDetail_posid"
                          android:id="@+id/rhistoryDetail_ll"
                          android:background="@color/line_gray">
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1.2"
                          android:gravity="center"
                          android:text="@string/query_name"
                          android:textSize="@dimen/sp_14"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="@string/results_color"
                          android:textSize="@dimen/sp_14"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="@string/results_size"
                          android:textSize="@dimen/sp_14"/>

                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="@string/price"
                          android:textSize="@dimen/sp_14"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="@string/ct_num2"
                          android:textSize="@dimen/sp_14"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/rhistoryDetail_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/line_gray"
                    android:overScrollMode="never"
                    android:layout_above="@+id/rhistoryDetail_ll2"
                    android:id="@+id/rhistoryDetail_rv"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_50"
                          android:orientation="horizontal"
                          android:layout_alignParentBottom="true"
                          android:id="@+id/rhistoryDetail_ll2">
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="@string/retail_receivable"
                          android:textSize="@dimen/sp_14"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:id="@+id/rhistoryDetail_receivable"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:textSize="@dimen/sp_14"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="@string/retail_received"
                          android:textSize="@dimen/sp_14"/>
                <TextView android:layout_width="0dp" android:layout_height="match_parent"
                          android:textColor="@color/black"
                          android:layout_weight="1"
                          android:id="@+id/rhistoryDetail_received"
                          android:gravity="center"
                          android:textSize="@dimen/sp_14"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>