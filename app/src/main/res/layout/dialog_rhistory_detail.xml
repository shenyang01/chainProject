<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/dialog_detail_rg"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5">

    </RadioGroup>
    <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/dialog_detail_submission"
            android:layout_width="@dimen/dp_80" android:layout_height="@dimen/dp_50"
            android:background="@color/colorAccent"
            android:text="@string/submission"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:textColor="@color/white"/>

</LinearLayout>