<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/coord_gray">
            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:paddingTop="@dimen/dp_30"
                      android:layout_weight="1"
                      android:id="@+id/cd_weekly_sales"
                      android:drawableTop="@mipmap/weekly_sales"
                      android:textColor="@color/white"
                      android:textSize="18sp"
                      android:gravity="center"
                      android:text="@string/cd_weekly_sales"/>
            <TextView android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:id="@+id/cd_shop_sales"
                      android:paddingTop="@dimen/dp_30"
                      android:textColor="@color/white"
                      android:drawableTop="@mipmap/shop_sales"
                      android:textSize="18sp"
                      android:gravity="center"
                      android:text="@string/cd_shop_sales"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_50"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="0dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="@dimen/dp_40"
                          android:gravity="center"
                          android:paddingStart="@dimen/dp_5"
                          android:text="@string/service"
                          android:textColor="@color/black"
                          android:textSize="14sp"/>
                <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_margin="@dimen/dp_5"
                        android:id="@+id/coordinate_rv"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:overScrollMode="never"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</layout>