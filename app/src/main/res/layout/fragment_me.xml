<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        android:background="@color/bg_title_bar">
            <ImageView
                    android:id="@+id/me_image"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_60" android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/login" android:contentDescription="@string/app_name"/>
            <TextView
                    android:id="@+id/me_name"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@id/me_image"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_5"
                    android:layout_height="@dimen/dp_30"
                    android:text="@string/test_value" tools:ignore="RelativeOverlap"/>
            <TextView
                    android:id="@+id/me_phone"
                    android:layout_toEndOf="@id/me_image"
                    android:layout_below="@id/me_name"
                    android:padding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="@string/test_value"/>
            <ImageView
                    android:id="@+id/me_go"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/go_w"
                    android:contentDescription="@string/test_value"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"/>
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_20"
              android:background="@color/line_gray"/>


        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_60"
                        android:id="@+id/me_edition">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dp_20"
                    android:gravity="center"
                    android:text="@string/edition"/>
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20"
                       android:contentDescription="@string/app_name"
                       android:src="@mipmap/go"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:layout_marginEnd="@dimen/dp_15"/>
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_1"
              android:background="@color/line_gray"
              android:layout_marginStart="@dimen/dp_30"
              android:layout_marginEnd="@dimen/dp_30"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_60"
                        android:id="@+id/me_down">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/software_d"/>
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20"
                       android:contentDescription="@string/app_name"
                       android:src="@mipmap/go"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:layout_marginEnd="@dimen/dp_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_1"
              android:background="@color/line_gray"
              android:layout_marginStart="@dimen/dp_30"
              android:layout_marginEnd="@dimen/dp_30"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_60"
                        android:id="@+id/me_help">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/help_feedback"/>
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20"
                       android:contentDescription="@string/app_name"
                       android:src="@mipmap/go"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:layout_marginEnd="@dimen/dp_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_20"
              android:background="@color/line_gray"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_60"
                        android:id="@+id/me_exit_login">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="@string/exit_login"/>
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20"
                       android:contentDescription="@string/app_name"
                       android:src="@mipmap/go"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:layout_marginEnd="@dimen/dp_15"/>
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@color/line_gray"/>
    </LinearLayout>
</layout>