<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_30">
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:id="@+id/item_rh_posid"
                  android:layout_marginStart="@dimen/dp_5"
                  android:gravity="bottom"
                  android:textSize="@dimen/sp_12"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:id="@+id/item_rh_time"
                  android:textSize="@dimen/sp_12"
                  android:gravity="bottom"
                  android:layout_marginEnd="@dimen/dp_5"
                  android:layout_alignParentEnd="true"
                  android:layout_alignEnd="@+id/item_rh_posid"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_30"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <TextView android:layout_width="80dp"
                  android:layout_marginStart="@dimen/dp_5"
                  android:layout_marginEnd="@dimen/dp_5"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:text="@string/ct_num"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:id="@+id/item_rh_num"/>

        <TextView android:layout_width="80dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:text="@string/currency"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:id="@+id/item_rh_currency"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_30"
                  android:background="@color/white"
                  android:orientation="horizontal">
        <TextView android:layout_width="80dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:layout_marginStart="@dimen/dp_5"
                  android:layout_marginEnd="@dimen/dp_5"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:text="@string/retail_receivable"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:id="@+id/item_rh_totalAmount"/>

        <TextView android:layout_width="80dp"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:text="@string/retail_received"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
                  android:textColor="@color/black"
                  android:id="@+id/item_rh_received"/>
    </LinearLayout>

</LinearLayout>