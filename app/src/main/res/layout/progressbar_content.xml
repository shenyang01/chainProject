<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
    <ImageView android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30"
               android:id="@+id/pro_image"
               android:contentDescription="@string/app_name"
               android:src="@mipmap/down"
               android:layout_alignParentStart="true"
               android:layout_margin="@dimen/dp_5"/>
    <ProgressBar android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_15"
                 android:layout_below="@id/pro_tv"
                 android:layout_marginStart="@dimen/dp_50"
                 android:layout_marginEnd="@dimen/dp_50"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:progressDrawable="@drawable/progressbar"
                 android:max="100"
                 android:id="@+id/pro_progressBar"/>
    <TextView android:layout_width="@dimen/dp_30" android:layout_height="wrap_content"
              android:id="@+id/pro_tv"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_12"
              android:gravity="center_vertical"
              android:layout_alignEnd="@+id/pro_progressBar"/>
</RelativeLayout>