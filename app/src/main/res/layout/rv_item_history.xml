<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="?android:attr/selectableItemBackground"
              android:layout_height="@dimen/dp_40">
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="3"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_14"
              android:gravity="center"
              android:id="@+id/item_history_mkid"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="1"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_14"
              android:gravity="center"
              android:id="@+id/item_history_year"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="1"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_14"
              android:gravity="center"
              android:id="@+id/item_history_month"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="2"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_14"
              android:gravity="center"
              android:id="@+id/item_history_time"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="1"
              android:textColor="@color/black"
              android:textSize="@dimen/sp_14"
              android:gravity="center"
              android:id="@+id/item_history_operator"/>
</LinearLayout>