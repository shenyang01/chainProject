<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_40">
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:textColor="@color/black"
                  android:id="@+id/item_retail_name"
                  android:layout_weight="1.2"
                  android:gravity="center"
                  android:textSize="@dimen/sp_14"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:textColor="@color/black"
                  android:layout_weight="1"
                  android:id="@+id/item_retail_color"
                  android:gravity="center"
                  android:textSize="@dimen/sp_14"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:textColor="@color/black"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/item_retail_size"
                  android:textSize="@dimen/sp_14"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:textColor="@color/black"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/item_retail_price"
                  android:textSize="@dimen/sp_14"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:textColor="@color/black"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/item_retail_num"
                  android:textSize="@dimen/sp_14"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="@dimen/dp_2"
          android:background="@color/line_gray"/>
</LinearLayout>